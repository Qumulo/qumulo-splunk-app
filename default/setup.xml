<setup>

  <block title="Qumulo Setup" endpoint="qumulo/qumulosetup" entity="qumulo">

    <text>Configure your Qumulo REST API Settings here</text>
        <input field="port">
            <label>port 'number' for the API server port</label>
            <type>text</type>
        </input>
        <input field="nodehost">
            <label>An IP address or hostname of a node in the cluster.</label>
            <type>text</type>
        </input>
   </block>


   <block title="Add new credentials" endpoint="storage/passwords" entity="_new">
     <input field="name">
       <label>Username</label>
       <type>text</type>
     </input>

     <input field="password">
       <label>Password</label>
       <type>password</type>
     </input>
   </block>

</setup>
